<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Dice Champ</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="https://code.jquery.com/jquery-2.2.0.js"></script>
	<script>
	$(document).ready(function(){
		var email,pass;
		$('#submit').click(function(){
			email=$('#email').val();
			pass=$('#password').val();

			$.post(process.env.MONGOLAB_URI/login ||'http://localhost:3000/login', {email:email,pass:pass}, function(data){
				if(data==='done'){
					window.location.href="/welcome";
				}
			});
		});
	});
</script>
</head>
<body>
<h1>Welcome to Dice Champ</h1>
<input type="text" placeholder="Enter Email" id="email"><br>
<input type="password" placeholder="Enter password" id="password"><br>
<input type="button" value="Submit" id="submit">

</body>
</html>